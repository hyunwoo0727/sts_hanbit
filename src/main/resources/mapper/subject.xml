<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.subject">
	<select id="findById" parameterType="string" resultType="int">
		SELECT DISTINCT SUBJ_SEQ AS SUBJSEQ FROM SUBJECT WHERE ID=#{id}
	</select>
	<select id="findByPk" parameterType="int" resultType="com.hanbit.web.subject.SubjectVO">
		SELECT SUBJ_SEQ AS SUBJSEQ,MAJOR,SUBJECTS,ID FROM SUBJECT WHERE SUBJ_SEQ=#{subSeq}
	</select>
	<insert id="insert" parameterType="com.hanbit.web.subject.SubjectVO">
		INSERT INTO SUBJECT(SUBJ_SEQ,ID,MAJOR,SUBJECTS) VALUES(SUBJ_SEQ.NEXTVAL,#{id},#{major},#{subjects})
	</insert>
</mapper>
