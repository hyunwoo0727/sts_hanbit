<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.account">
	<select id="findByPk" parameterType="int" resultType="com.hanbit.web.bank.AccountMemberVO">
		SELECT * FROM ACCOUNT_MEMBER WHERE ACCOUNTNO=#{accNo}
	</select>
	<select id="selectAll" resultType="com.hanbit.web.bank.AccountMemberVO">
		SELECT * FROM ACCOUNT_MEMBER
	</select>
	<insert id="openAccount" parameterType="string">
		INSERT INTO ACCOUNT VALUES(accSeq.nextval,#{id},0)
	</insert>
	<update id="deposit" parameterType="com.hanbit.web.bank.AccountMemberVO">
		UPDATE ACCOUNT SET MONEY=MONEY+#{money} WHERE ACCOUNTNO=#{accountNo}
	</update>
	<update id="withdraw" parameterType="com.hanbit.web.bank.AccountMemberVO">
		UPDATE ACCOUNT SET MONEY=MONEY-#{money} WHERE ACCOUNTNO=#{accountNo}
	</update>
	<update id="updateAccount" parameterType="com.hanbit.web.bank.AccountMemberVO">
		UPDATE MEMBER SET PW=#{pw} WHERE ID=(SELECT ID FROM ACCOUNT WHERE ACCOUNTNO=#{accountNo})
	</update>
	<delete id="closeAccount" parameterType="int">
		DELETE FROM ACCOUNT WHERE ACCOUNTNO=#{accNo}
	</delete>
	
</mapper>
